@page "/"


<div class="jumbotron">
    <div class="d-flex">
        <div class="d-flex align-items-start flex-column">
            <button 
                type="button" class="btn btn-success w-100"
                @onclick="()=>{local++;}"
            >
            +1
            </button>
            
            <button 
                type="button" class="btn btn-warning mt-auto  w-100"
                @onclick="()=>{local--;}"
            >
            -1</button>
        </div>
        <div class="flex-grow-1 text-center">
            <h1 class="display-1">@local - @visitant</h1>
        </div>
        <div class="d-flex align-items-end flex-column">
            <button 
                type="button" class="btn btn-success  w-100"
                @onclick="()=>{visitant++;}"
            >            
            +1
            </button>
            
            <button 
                type="button" class="btn btn-warning mt-auto  w-100"
                @onclick="()=>{visitant--;}"
            >
            -1
            </button>
        </div>
    </div>
</div>

@code
{
    int local = 0;
    int visitant = 0;

}