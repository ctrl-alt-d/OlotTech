@page "/"
@using serverside.Data;
@inject Marcador Marcador;

<div class="jumbotron">
    <div class="d-flex">
        <div class="d-flex align-items-start flex-column">
            <button 
                type="button" class="btn btn-success w-100"
                @onclick="Marcador.IncrementaLocal"
            >
            +1
            </button>
            
            <button 
                type="button" class="btn btn-warning mt-auto  w-100"
                @onclick="Marcador.DecrementaLocal"
            >
            -1</button>
        </div>
        <div class="flex-grow-1 text-center">
            <h1 class="display-1 marcador">@Marcador.Local - @Marcador.Visitant</h1>
        </div>
        <div class="d-flex align-items-end flex-column">
            <button 
                type="button" class="btn btn-success  w-100"
                @onclick="Marcador.IncrementaVisitant"
            >            
            +1
            </button>
            
            <button 
                type="button" class="btn btn-warning mt-auto  w-100"
                @onclick="Marcador.DecrementaVisitant"
            >
            -1
            </button>
        </div>
    </div>
</div>

@code
{    
    protected override void OnInitialized()
    {
        Marcador.PropertyChanged += (_,__) => InvokeAsync(StateHasChanged);
    }
}